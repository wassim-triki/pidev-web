			function useVoucher(url, voucherId) {
				fetch(url, {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
						'X-Requested-With': 'XMLHttpRequest',
						'X-CSRF-Token': '{{ csrf_token("use_voucher") }}' 
					}
				})
				.then(response => {
					if (response.ok) {
						sendEmail()
						window.location.href = '{{ path('confirm_voucher', {'id': 'VOUCHER_ID'}) }}'.replace('VOUCHER_ID', voucherId);
					} else {
						console.error('Failed to update voucher');
					}
				})
				.catch(error => {
					console.error('Error:', error);
				});
			}
			function sendEmail() {
				fetch('{{ path('send_email') }}', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
						'X-Requested-With': 'XMLHttpRequest',
						'X-CSRF-Token': '{{ csrf_token("send_email") }}'
					}
				})
				.then(response => {
					if (!response.ok) {
						console.error('Failed to send email');
					}
				})
				.catch(error => {
					console.error('Error sending email:', error);
				});
			}

			

		function filterVouchers(filter) {
			// Send AJAX request to fetch vouchers based on the selected filter
			$.ajax({
				url: "{{ path('filter_vouchers') }}",
				type: "GET",
				data: { filter: filter },
				success: function(response) {
					// Replace the voucher listing with the updated vouchers
                    console.log(response)
					$('#vouchers-row').html(response);
				}
			});
    	}
	function submitProfilePictureForm() {
		document.getElementById('profile-picture-form').submit();
	}

    </script>
