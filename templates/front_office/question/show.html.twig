{% extends 'front_office/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
{% endblock %}

{% block main %}
    <h1 class="mb-4 text-center">Q/A</h1>
    <div class="d-flex justify-content-center">
        <div class="col-md-8">
            {% for question in questions %}
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <b class="text-uppercase">{{ question.title }}</b>
                        <br>    
                        <small class="text-muted">Asked by {{ question.userid.username }} on {{ question.createdAt|date('Y-m-d H:i:s') }}</small>
                    </div>
                    <div class="card-body">
                        <p>{{ question.body }}</p>
                        <!-- Show Answers button -->
                        <a  class="btn btn-warning btn-sm">
                            <i class="fas fa-eye"></i> Show Answers
                        </a>
                        {% if app.user == question.userid %}
                            <!-- Edit and Delete buttons -->
                            <a href="{{ path('edit_question', {'id': question.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('delete_question', {'id': question.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        {% endif %}
                    </div>
                    <div class="card-footer text-right">
                       
                    </div>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-end">
                <a href="{{ path('add_question') }}" class="btn btn-warning">
                    Ask a question
                </a>
                
            </div>
        </div>
    </div>
{% endblock %}
