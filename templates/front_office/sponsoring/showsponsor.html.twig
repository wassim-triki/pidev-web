                                <div class="by-cmmnt">
                                    <div class="comnt-rght">
                                        <a href="{{ path('addpostgroup', {'id': a.id}) }}" class="far fa-comment">OPEN</a> 
                                    </div>
                                </div> 
                            </div>                                                              
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
