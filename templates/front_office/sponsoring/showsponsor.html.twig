                <div class="row">
                    {% for a in sponsor %}
                    <div class="col-lg-4 col-md-6">
                        <div class="our-blogs">                                
                            <div class="blog-img">
                                <a href="blog_detail_view.html"><img src="{{ ('uploads/' ~ a.image) }}" style="width: 100%; height: 300px;"></a>
