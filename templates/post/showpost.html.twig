{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Include Bootstrap CSS link if not already included in the parent template #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-Ty0W1DIi3qX9m2L5C1oBLGEIfX6mwIcYIUVG48iHwbLTfjZUnLDJ5HR9tJR3BCmD" crossorigin="anonymous">
    <style>
        /* Add custom styles if needed */
    </style>
{% endblock %}

{% block main %}
    <div class="container mt-4">
        <div class="row">
            <div class="card-group">
            {% for i in post %}
                <div class="col-md-3">
                    <div class="card card-cascade" style="width: 18rem;">
                        <div class="card-header bg-transparent border-success">
                            <div class="media">
                                <img src="{{ i.user.photo }}" class="d-block ui-w-40 rounded-circle" style="width: 17%; height: 40px;">
                                <div class="media-body ml-3">
                                    <h5 class="mt-0">{{ i.user.username | default('No username') }}</h5>
                                    <p class="mb-0 text-muted">{{ i.user.email | default('No Email') }}</p>
                                </div>
                            </div>
                        </div>
                        
                    <div class="view view-cascade overlay">
                        <img class="card-img-top" src="{{ i.ImageUrl }}" alt="Card image" style="width: 100%; height: 200px;">
                    <a>
                    <div class="mask rgba-white-slight waves-effect waves-light"></div>
                    </a>
                    </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ i.titre }}</h5>
                            <p class="card-text">{{ i.description }}</p>
                            <p class="card-text">
                                <small class="text-muted">{{ i.date|date("F j, Y, g:i a") }}</small>
                            </p>
                        </div>
                        <div class="card-footer">
                            <center>
                            <div class="row">
                                <div class="col">
                                    <form action="{{ path('editpost', {'id': i.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir modifier ce poste?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ i.id) }}">
                                        <button type="submit" class="btn btn-primary btn-sm" title="Modifier le poste">
                                            <i class="fas fa-edit"></i>
                                        </button>                                        
                                    </form>
                                </div>
                                <div class="col">
                                    <form action="{{ path('deletepost', {'id': i.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce poste?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ i.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Supprimer le poste">
                                            <i class="fas fa-trash"></i> 
                                        </button>
                                    </form>
                                </div>
                            </div>
                            </center>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        </div>
    </div>
    <br><br>
{% endblock %}
