{% extends 'backOffice/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block main %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <br>
            <div class="row">
                <div class="col-xl-8 col-lg-12 order-lg-2 order-xl-1">
                    <div class="card">
                        <div class="card-body pt-0">
                            <div class="table-responsive">
                                <table class="table table-centered table-nowrap table-hover mb-0">
                                    <tbody>
                                        {% for i in vouchers %}
                                        <tr>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">Title</h5>
                                                <span class="text-muted font-13">{{ i.code }}</span>
                                            </td>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">Type</h5>
                                                <span
                                                    class="text-muted font-13 {{ i.category.titre == 'Lost' ? 'type-lost' : 'type-found' }}">{{
                                                    i.category.titre}}</span>
                                            </td>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">Value</h5>
                                                <span class="text-muted font-13">{{ i.value }}</span>
                                            </td>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">Name of user</h5>
                                                <span class="text-muted font-13">{{ i.userWon.getEmail() }}</span>
                                            </td>
                                            <td>
                                                <!-- Emoji as a button to open the modal -->
                                                <button type="button" class="btn btn-link" data-bs-toggle="modal"
                                                    data-bs-target="#imageModal{{ i.id }}" style="font-size: 24px;">
                                                    üì∑
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="imageModal{{ i.id }}" tabindex="-1"
                                                    aria-labelledby="imageModalLabel{{ i.id }}" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="imageModalLabel{{ i.id }}">
                                                                    Image
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            {# <div class="modal-body">
                                                                <center><img src="{{ asset('uploads/' ~ i.imageUrl) }}"
                                                                        alt={{ i.imageUrl }} style="height: 4.5cm;" />
                                                                </center>
                                                            </div> #}
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="{{ path('voucher_delete', {'id': i.id}) }}" class="btn btn-link"
                                                    style="font-size: 24px;"
                                                    onclick="return confirm('Are you sure you want to delete this Voucher?');">
                                                    üóëÔ∏è
                                                </a>
                                            </td>

                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div> <!-- end table-responsive-->
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div><!-- end col-->
                <div class="col-xl-4 col-lg-6 order-lg-1">
                    <div class="card">
                        <div class="d-flex card-header justify-content-between align-items-center">
                            <h4 class="header-title">voucher Statistics</h4>
                        </div>

                        <div class="card-body pt-0">
                            <div id="post-statistics-chart" class="apex-charts mb-4 mt-2"></div>

                            <div class="chart-widget-list">
                                <p>
                                    <i class="mdi mdi-square text-primary"></i> Total Posts
                                    <span class="float-end"> statistics.totalVoucher</span>
                                </p>


                                <div class="card-body">
                                    <h5 class="text-muted fw-normal mt-0" title="Number of Customers">Total Lost</h5>
                                    <h3 class="mt-3 mb-3"> statistics.lostPosts </h3>
                                    <p class="mb-0 text-muted">
                                        <span class="text-danger me-2"><i></i> 
                                            (statistics.lostPosts / statistics.totalPosts) * 100 %</span>
                                        <span class="text-nowrap">of posts</span>
                                    </p>
                                </div>
                                <div class="card-body">
                                    <h5 class="text-muted fw-normal mt-0" title="Number of Customers">Total Found</h5>
                                    <h3 class="mt-3 mb-3"> statistics.foundPosts </h3>
                                    <p class="mb-0 text-muted">
                                        <span class="text-success me-2"><i></i> 
                                            (statistics.foundPosts / statistics.totalPosts) * 100 %</span>
                                        <span class="text-nowrap">of posts</span>
                                    </p>
                                </div>
                            </div>
                        </div> <!-- end card-body-->
                    </div>
                </div>

            </div>
        </div>

        <style>
            .type-lost {
                color: red;
            }

            .type-found {
                color: green;
            }
        </style>
        {% endblock %}