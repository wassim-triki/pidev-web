{% extends 'back_office/base.html.twig' %} 

{% block title %}Posts List{% endblock %}

{% block main %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <br>
            <div class="row justify-content-center">
                <div class="col-xl-14 col-lg-12 order-lg-2 order-xl-1"> <!-- J'ai ajust√© la largeur de la colonne √† col-xl-10 -->
                    <div class="card">
                        <div class="card-body pt-2">
                            <div class="table-responsive">
                                <table class="table table-centered table-nowrap table-hover mb-0">
                                    <tbody>
                                        {% for i in commentaire %}
                                        <tr>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">id</h5>
                                                <span class="text-muted font-13">{{ i.id }}</span>
                                            </td>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">contenu</h5>
                                                <span class="text-muted font-13">{{ i.commentaire }}</span>
                                            </td>
                                            <td>
                                                <h5 class="font-14 my-1 fw-normal">Name of user</h5>
                                                <span class="text-muted font-13">{{ i.user.getUsername() }}</span>
                                            </td>
                                             <td>
                                                <h5 class="font-14 my-1 fw-normal">Nombre de likes</h5>
                                                <span class="text-muted font-13">{{ i.likes }}</span>
                                            </td>
                                                 
                                            <td>
                                               <td>
                                                <a href="{{ path('deletecommentAdmin', {'id': i.id}) }}" class="btn btn-link" style="font-size: 24px;" onclick="return confirm('Are you sure you want to delete this post?');">
                                                    üóëÔ∏è
                                                </a>
                                            </td>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div> <!-- end table-responsive-->
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div><!-- end col-->
            </div> <!-- end row justify-content-center -->
        </div> <!-- end container-fluid -->
    </div> <!-- end content -->
</div> <!-- end content-page -->
{% endblock %}
