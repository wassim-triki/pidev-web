{% extends 'back_office/base.html.twig' %} 

{% block title %}Hello SponsoringAdminController!{% endblock %}

{% block main %}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
<main class="goeveni-mp">	
    <div class="main-section">
        <div class="container mt-2 mb-5">
            <div class="row justify-content-md-center">
                <div class="col-xl-10 col-lg-12 col-md-12"> {# Enlarging the column to col-xl-10 #}
                    <div class="add-event-tabs">
                        <div class="tab-content" id="mainTabContent">
                            <div class="tab-pane fade show active" id="online" role="tabpanel" aria-labelledby="online-tab">
                                <div class="event-type-dt main-form mt-1">
                                    <div class="tab-content" id="subTabContent">
                                        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                            <div class="col-lg-18 col-md-12"> {# Enlarging the column to col-lg-12 #}
                                                <div class="main-card" style="max-width: 1000px; padding: 20px 15px 15px 20px;"> {# Adjusted max-width #}
                                                    <div class="categories-left-heading border_bottom">
                                                        <h3>Add NEW SPONSORING</h3>							
                                                    </div>

                                                    {{ form_start(f, {'attr': {'novalidate': 'novalidate', 'class': 'form-group'}}) }}

                                                    <div class="form-section">
                                                        <div class="main-card p-4">
                                                            <div class="add-event-cover-image">
                                                                <div class="upload-cover">
                                                                    <div class="cover-img-btn">
                                                                    <div class="image-preview">
                                                                    <img id="sponsor-photo-preview" src="{{ asset('front_office/images/default-photo.png') }}"  style="max-width: 250px; max-height: 250px;" >
                                                                    </div>
                                                                        
                                                                        {{ form_widget(f.image,{'attr': {'id': 'sponsorForm_photo', 'onchange': 'previewImage(event)'}}) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group mt-3  ">
                                                            {{ form_label(f.name, "Name of Sponsor:", {'label_attr': {'class': 'col-sm-3 col-form-label text-sm-end'}}) }}
                                                            
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(f.name, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                            <div style="color: red;">{{ form_errors(f.name) }}</div>
                                                        </div>
                                                        <div class="form-group mt-3  ">
                                                            {{ form_label(f.description, "Description of Sponsor:", {'label_attr': {'class': 'col-sm-4 col-form-label text-sm-end'}}) }}
                                                            
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(f.description, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                            <div style="color: red;">{{ form_errors(f.description) }}</div>
                                                        </div>
                                                        <div class="form-group mt-3  ">
                                                            {{ form_label(f.contrat, "contrat of Sponsor:", {'label_attr': {'class': 'col-sm-4 col-form-label text-sm-end'}}) }}
                                                            
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(f.contrat, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                            <div style="color: red;">{{ form_errors(f.contrat) }}</div>
                                                        </div>
                                                        <div class="form-group mt-3  ">
                                                            {{ form_label(f.type, "Etat of Sponsor:", {'label_attr': {'class': 'col-sm-4 col-form-label text-sm-end'}}) }}
                                                            
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(f.type, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                            <div style="color: red;">{{ form_errors(f.contrat) }}</div>
                                                        </div>
                                                        
                                                         
                                                        
                                                        <div class="form-group mt-5  ">
                                                            {{ form_label(f.date, "Date of Sponsoring:", {'label_attr': {'class': 'col-sm-3 col-form-label text-sm-end'}}) }}
                                                            <div style="color: red;">{{ form_errors(f.date) }}</div>
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(f.date, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                        </div>
                                                       
                                                    </div>

                                                    <div class="form-group row justify-content-center">
                                                        <div class="col-md-5">
                                                            {{ form_widget(f.save ,{'attr': {'class': ' main-btn btn-hover h-40 w-100 mt-5'}}) }}
                                                        </div>
                                                    </div>

                                                    {{ form_end(f) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</main>
 </div>
  </div>
   </div>
   <script>
      function previewImage(event) {
         var reader = new FileReader();
         reader.onload = function() {
            var output = document.getElementById('sponsor-photo-preview');
            output.src = reader.result;
         };
         reader.readAsDataURL(event.target.files[0]);
      }
   </script>
   <style>/* Styles pour la page d'ajout de sponsoring */

    /* En-tête de la page */
    .content-page {
        padding: 20px;
    }
    
    /* Titre */
    .categories-left-heading h3 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }
    
    /* Formulaire */
    .main-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }
    
    /* Zones de texte */
    .form-group {
        margin-bottom: 30px;
    }
    
    /* Labels */
    .form-group label {
        font-weight: bold;
        color: #555;
        margin-bottom: 10px;
        display: block;
    }
    
    /* Inputs */
    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #007bff;
    }
    
    /* Bouton */
    .main-btn {
        background-color: #ffa600;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 12px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    
    .main-btn:hover {
        background-color: #0056b3;
    }
    
    /* Image de prévisualisation */
    .image-preview {
        margin-bottom: 30px;
    }
    
    #sponsor-photo-preview {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
    
    /* Ajustement de la disposition sur les petits écrans */
    @media (max-width: 768px) {
        .col-xl-10,
        .col-lg-12 {
            width: 100%;
        }
    }
    
    /* Ajustement de la disposition sur les écrans moyens */
    @media (min-width: 768px) and (max-width: 992px) {
        .col-xl-10,
        .col-lg-12 {
            width: 80%;
        }
    }
    
    /* Ajustement de la disposition sur les grands écrans */
    @media (min-width: 992px) {
        .col-xl-10,
        .col-lg-12 {
            width: 70%;
        }
    }
    
    </style>
{% endblock %}


