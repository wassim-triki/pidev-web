{% extends 'base.html.twig' %} 
	{% block title %}Confirme Voucher{% endblock
    %} 
	{% block main %}
		
		<main class="discussion-mp">	
			<div class="main-section">
				<div class="container">
					<div class="row justify-content-md-center">
						<div class="col-lg-6 col-md-8">
							<div class="checkout-heading text-center">
								<h2 class="mt-3">Voucher Confirmed</h2>								
							</div>
							<div class="confirm-order">
							<div class="checkout-dt1">
								<div class="check-img">
									<img src="{{asset('images/event-view/checkout-img.jpg')}}" alt="">
								</div>
								<div class="evnt-dt-ckot1">
									<div class="lctn-dt1"><h4><i class="feather-lock"></i>{{voucher.code}}></h4></div>
									<div class="lctn-dt1"><i class="feather-tag"></i>{{voucher.category.getTitre()}}</div>
									<div class="lctn-dt1"><i class="feather-shopping-cart"></i>{{voucher.marketRelated.getName()}}</div>
									<div class="lctn-dt1"><i class="feather-dollar-sign"></i>{{voucher.value}} DT</div>
									<div class="lctn-dt1"><i class="feather-user"></i>{{voucher.userWon.Email}}</div>
								</div>									
							</div>
							<div class="confirm-tickets">
								<div class="vip-left1">Validity : </div>
								<div class="vip-left">{{voucher.isValid ? 'not Used yet' : 'Used'}}</div>
								<div class="css-dot">,</div>
								<div class="general-left">limite Usage : {{voucher.usageLimit}}</div>
							</div>
							<div class="congrats">
								<h4>Congratulations {{voucher.userWon.Email}} !!!</h4>
								<span>You just have used your voucher </span>
								<p>Scan QRCode at {{voucher.marketRelated.name}} to take you phisical coupons there !</p>
								{% if qrcode %}
									<img src="{{qrcode}}" alt="">
								{% endif %}
								<p class="sms">Ticket details are sent to you in sms & email. Thanks!</p>
									<div class="group-btns">
										<button class="interest-btn btn-hover w-100" onclick="goToProfile()">
											<i class="feather-link me-2"></i>Go back to profile
										</button>
									</div>
							</div>															
						</div>															
					</div>											
				</div>					
			</div>
		</div>
</main>

<script>
    function goToProfile() {
        // Change the window location to the profile page
        window.location.href = '/profile';
    }
</script>

{% endblock %}