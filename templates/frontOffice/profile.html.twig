			function useVoucher(url, voucherId) {
				fetch(url, {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
						'X-Requested-With': 'XMLHttpRequest',
						'X-CSRF-Token': '{{ csrf_token("use_voucher") }}' 
					}
				})
				.then(response => {
					if (response.ok) {
						// Redirect to the confirm_voucher route with the voucher ID
						window.location.href = '{{ path('confirm_voucher', {'id': 'VOUCHER_ID'}) }}'.replace('VOUCHER_ID', voucherId);
					} else {
						console.error('Failed to update voucher');
					}
				})
				.catch(error => {
					console.error('Error:', error);
				});
			}

			

		function filterVouchers(filter) {
			// Send AJAX request to fetch vouchers based on the selected filter
			$.ajax({
				url: "{{ path('filter_vouchers') }}",
				type: "GET",
				data: { filter: filter },
				success: function(response) {
					// Replace the voucher listing with the updated vouchers
					$('#filteredVouchersContainer').html(response);
				}
			});
    	}

		function searchVouchersByCategory() {
    // Get the search input value
    var searchInput = document.getElementById("voucherCategorySearch").value;

    // Send AJAX request to fetch vouchers based on the category search
    $.ajax({
        url: "{{ path('search_vouchers_by_category') }}",
        type: "GET",
        data: { category: searchInput },
        success: function(response) {
            // Replace the voucher listing with the updated vouchers
            $('#filteredVouchersContainer').html(response);
        }
    });
}

// Event listener for the keyup event on the search input field
$('#voucherCategorySearch').on('keyup', function(event) {
    // Check if the Enter key was pressed (key code 13)
    if (event.keyCode === 13) {
        // Call the search function when Enter key is pressed
        searchVouchersByCategory();
    }
});

		function triggerSearch() {
        // Get the search input value
        var searchInput = document.getElementById("voucherCategorySearch").value;

        // Trigger the search function only if the search input is not empty
        if (searchInput.trim() !== '') {
            searchVouchersByCategory();
        }
    }

    // Event listener for the keyup event on the search input field
    $('#voucherCategorySearch').on('keyup', function() {
        // Call the triggerSearch function when the user finishes typing
        triggerSearch();
    });


