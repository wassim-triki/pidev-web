{# templates/security/reset_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block main %}

    {% include 'components/title_bar.html.twig' %}

    <main class="contact-mp ">
        <div class="main-section">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="contact-heading text-center">
                            <h2 class="mt-3 mb-3">Rest your password</h2>
                            {#                            <p class="mb-37">Do you have any question? Our experts will be happy to help.</p>#}
                            {% for flash_message in app.flashes('success') %}
                                <div class="alert mt-2 mb-0 p-2 alert-success small">
                                    {{ flash_message }}
                                </div>
                            {% endfor %}
                            {% for flash_message in app.flashes('error') %}
                                <div class="alert mt-2 mb-0 p-2 alert-danger small">
                                    {{ flash_message }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="contact-form">
                            {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(resetForm.password.first, 'New Password*', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(resetForm.password.first, {'attr': {'class': 'form-input', 'placeholder': 'Enter New Password'}}) }}
                                {% for error in resetForm.password.first.vars.errors %}
                                    <div class="alert mt-2 p-2 alert-danger small">
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="form-group mt-3">
                                {{ form_label(resetForm.password.second, 'Confirm Password*', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(resetForm.password.second, {'attr': {'class': 'form-input', 'placeholder': 'Confirm New Password'}}) }}
                                {% for error in resetForm.password.second.vars.errors %}
                                    <div class="alert mt-1 p-2 alert-danger small">
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_row(resetForm.submit) }}
                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>




