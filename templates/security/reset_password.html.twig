{# templates/security/reset_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block main %}
    <div class="container">
        <h1>Reset Password</h1>
        {% for flash_message in app.flashes('success') %}
            <div class="alert mt-2 p-2 alert-success small">
                {{ flash_message }}
            </div>
        {% endfor %}
        {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(resetForm.password.first, 'New Password*', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(resetForm.password.first, {'attr': {'class': 'form-input', 'placeholder': 'Enter New Password'}}) }}
            {% for error in resetForm.password.first.vars.errors %}
                <div class="alert mt-2 p-2 alert-danger small">
                    {{ error.message }}
                </div>
            {% endfor %}
        </div>
        <div class="form-group">
            {{ form_label(resetForm.password.second, 'Confirm Password*', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(resetForm.password.second, {'attr': {'class': 'form-input', 'placeholder': 'Confirm New Password'}}) }}
            {% for error in resetForm.password.second.vars.errors %}
                <div class="alert mt-2 p-2 alert-danger small">
                    {{ error.message }}
                </div>
            {% endfor %}
        </div>
        {{ form_row(resetForm.submit) }}
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
