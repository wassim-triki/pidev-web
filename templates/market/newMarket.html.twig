{% extends 'base.html.twig' %}
{% block title %} Add new form to the system {% endblock %}
    {% block css %}
        {{ parent() }}
        <style>
            .card-body-custom {
                background-color:#FFAA33;
                padding: 3%;
                display: flex;
                flex-direction: column;
                width: 100%;
            }
            .container-1 {
                display: flex ;
                flex-direction: row;
                justify-content: space-between;
            }
            .input-style {
            margin-left: 5%;
            border-radius: 10px;
            border: 2px solid black;
        }
        .btn {
            margin-left: 40%;
            margin-top: 5%;
            border-radius: 10px;
            border: 2px solid black;
        }
            
        </style>
    {% endblock %}
    {% block main %}
        {{form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}})}}
        <main class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header" style="background-color: dimgrey;">
                        <h4 class="mb-0"style="color:#ffff">New market</h4>
                    </div>
                    <div class="container-1">
                        <div class="card-body-custom">
                        
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                <br>
                                {{ form_widget(form.name, {'attr': {'class': 'input-style'}}) }}
                                <div style="color: red;margin-left:10%;">{{ form_errors(form.name) }}</div>
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.region) }}
                                <br>
                                {{ form_widget(form.region, {'attr': {'class': 'input-style'}}) }}
                                <div style="color: red;margin-left:10%;">{{ form_errors(form.region) }}</div>
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.city) }}
                                <br>
                                {{ form_widget(form.city,{'attr': {'class': 'input-style'}}) }}
                                <div style="color: red;margin-left:10%;">{{ form_errors(form.city) }}</div>
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.zipCode) }}
                                <br>
                                {{ form_widget(form.zipCode,{'attr': {'class': 'input-style'}}) }}
                                <div style="color: red;margin-left:10%;">{{ form_errors(form.zipCode) }}</div>
                            </div>
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                            </div>
                            <img src="{{ asset('images/shop-online.png') }}" alt="img-shop-virtual"style="width:60%">
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</main>
        {{form_end(form) }}
    {% endblock %}

    {% block javascripts %}
        <script>
        </script>
        {% endblock %}