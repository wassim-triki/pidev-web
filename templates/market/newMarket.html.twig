        {% extends 'base.html.twig' %}

        {% block title %}Hello SponsoringController!{% endblock %}
        
        {% block main %}
			<div class="main-section">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-group'}}) }}
				<div class="container">
					<div class="row justify-content-md-center">
						<div class="col-xl-6 col-lg-10 col-md-12">
							<div class="main-card p-4">
								<div class="add-event-cover-image">
									<div class="upload-cover">
										<div class="cover-img-btn">
											<input type="file" id="cover-img">
											<label for="cover-img"><i class="feather-image me-3"></i>Upload Cover Image</label>
										</div>
										<p>We recommended using a photo that is 1200x628 pixels.</p>
									</div>
								</div>
							</div>

							<div class="add-event-tabs">
								

								<div class="tab-content" id="mainTabContent">
									<div class="tab-pane fade active show" id="online" role="tabpanel" aria-labelledby="online-tab">
										<div class="event-type-dt main-form mt-4">
											<h5 class="title-b">Add Market</h5>
											<div class="tab-content" id="subTabContent">
												<div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
													<div class="form-group mt-4">	
                                                        {{ form_label(form.name, "shop name:", {'label_attr': {'class': 'form-label'}}) }} 
                                                        {{ form_widget(form.name, {'attr': {'class': 'form-input'}}) }}
                                                        <div style="color: red;">{{ form_errors(form.name) }}</div>

													</div>
                                                    <div class="form-group mt-4">	
                                                        {{ form_label(form.region, "shop name:", {'label_attr': {'class': 'form-label'}}) }} 
                                                        {{ form_widget(form.region, {'attr': {'class': 'form-input'}}) }}
                                                        <div style="color: red;">{{ form_errors(form.region) }}</div>
													</div>
                                                    <div class="form-group mt-4">	
                                                        {{ form_label(form.city, "shop name:", {'label_attr': {'class': 'form-label'}}) }} 
                                                        {{ form_widget(form.city, {'attr': {'class': 'form-input'}}) }}
                                                        <div style="color: red;">{{ form_errors(form.city) }}</div>
													</div>
                                                    <div class="form-group mt-4">	
                                                        {{ form_label(form.zipCode, "shop name:", {'label_attr': {'class': 'form-label'}}) }} 
                                                        {{ form_widget(form.zipCode, {'attr': {'class': 'form-input'}}) }}
                                                        <div style="color: red;">{{ form_errors(form.zipCode) }}</div>
													</div>
                                                    
												<div class="row">
													<button class="main-btn btn-hover h-40 w-100 mt-37 mb-3">Create Event</button>
												</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    {% endblock %}
        