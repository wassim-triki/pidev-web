{% extends 'base.html.twig' %}

{% block title %}Hello SponsoringController!{% endblock %}

{% block main %}
    <div class="main-section">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-group'}}) }}
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-xl-6 col-lg-10 col-md-12">
                    <div class="add-event-tabs">
                        

                        <div class="tab-content" id="mainTabContent">
                            <div class="tab-pane fade active show" id="online" role="tabpanel" aria-labelledby="online-tab">
                                <div class="event-type-dt main-form mt-4">
                                    <h5 class="title-b">Add New Category for voucher</h5>
                                    <div class="tab-content" id="subTabContent">
                                        <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                                            <div class="form-group mt-4">	
                                                {{ form_label(form.titre, "Category name:", {'label_attr': {'class': 'form-label'}}) }} 
                                                {{ form_widget(form.titre, {'attr': {'class': 'form-input'}}) }}
                                                <div style="color: red;">{{ form_errors(form.titre) }}</div>

                                            </div>
                                            <div class="form-group mt-4">	
                                                {{ form_label(form.discription, "Discription:", {'label_attr': {'class': 'form-label'}}) }} 
                                                {{ form_widget(form.discription, {'attr': {'class': 'form-textarea'}}) }}
                                                <div style="color: red;">{{ form_errors(form.discription) }}</div>
                                            </div>
                                            <div class="row" style="margin-bottom: 5%;">
                                                {{ form_widget(form.save ,{'attr': {'class': ' main-btn btn-hover h-40 w-50 mt-5', 'style':'margin-left:30%'}}) }}  
                                            </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
